<mah:MetroWindow x:Class="PolyDesktopGUI_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:local="clr-namespace:PolyDesktopGUI_WPF"
        mc:Ignorable="d"
        Title="PolyDesktop" Height="720" Width="1280">
    <Grid>
        <Image Source="Resources/PolyDesktopBanner.png" Height="330" Width="326" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="235,-115,235,0"/>
        <Button x:Name="StartPDButton" Click="StartPDButton_Click" Height="30" Width="150" VerticalAlignment="Top" Margin="561,95,561,0" ToolTip="Click to begin remoting into computers.">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="5"/>
                </Style>
            </Button.Resources>
            Start PolyDesktop
        </Button>
        <Button x:Name="EditDeskPre" Click="EditDeskPre_Click" Height="30" Width="150" VerticalAlignment="Top" Margin="561,160,561,0">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="5"/>
                </Style>
            </Button.Resources>
            Edit Desktop Presets
        </Button>
        <Button x:Name="ViewDeskPro" Click="ViewDeskPro_Click" Height="30" Width="150" VerticalAlignment="Top" Margin="561,225,561,0">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="5"/>
                </Style>
            </Button.Resources>
            View Desktop Properites
        </Button>
        <Button x:Name="ViewScirptS" Click="ViewScirptS_Click" Height="30" Width="150" VerticalAlignment="Top" Margin="561,290,561,0">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="5"/>
                </Style>
            </Button.Resources>
            View Script Stats
        </Button>
        <Button x:Name="Settings" Click="Settings_Click" Height="30" Width="30" VerticalAlignment="Top" Margin="566,354,676,0">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="5"/>
                </Style>
            </Button.Resources>
            <mah:FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#59155;"/>
        </Button>
        <Button x:Name="Tutorial" Click="Tutorial_Click" Content="Tutorial" Height="30" Width="100" VerticalAlignment="Top" Margin="606,354,566,0">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="5"/>
                </Style>
            </Button.Resources>
        </Button>

        <Frame x:Name="NavFrame" NavigationUIVisibility="Hidden"/>
        <mah:Flyout x:Name="ModePickerFlyout" Header="Choose a Mode" Theme="Adapt" Position="Top" Width="326" Height="125" IsOpen="False">
            <StackPanel VerticalAlignment="Center">
                <Button Name="PresetButton" Content="Preset"/>
                <Button Name="BasicButton" Content="Basic Mode" Click="BasicButton_Click"/>
                <Button Name="TabButton" Content="Tab Mode" Click="TabButton_Click"/>
                <Button Name="GroupButton" Content="Group Mode"/>
            </StackPanel>
        </mah:Flyout>
    </Grid>
</mah:MetroWindow>
