<Page x:Class="PolyDesktopGUI_WPF.TabModePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
      xmlns:local="clr-namespace:PolyDesktopGUI_WPF"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="TabModePage"
      xmlns:Controls="clr-namespace:PollRobots.OmotVnc.Controls;assembly=OmotVnc.Controls">

    <Grid Background="{DynamicResource MahApps.Brushes.ThemeBackground}">
         <!--TODO:MahApps Tab Control with individual dock panels for each VNC instance-->
        <mah:MetroAnimatedSingleRowTabControl>
            <mah:MetroTabItem Header="PolyBay">
                <Label Content="Dock Panel For PolyBay Here"/>
            </mah:MetroTabItem>
            <mah:MetroTabItem Header="Tab2" CloseButtonEnabled="True">
                <Label Content="Dock Panel 2 Here"/>
            </mah:MetroTabItem>
        </mah:MetroAnimatedSingleRowTabControl>
    </Grid>
</Page>
