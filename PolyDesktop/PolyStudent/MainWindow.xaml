<mah:MetroWindow x:Class="PolyStudent.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:local="clr-namespace:PolyStudent"
        mc:Ignorable="d"
         Title="PolyDesktop" Height="600" Width="640" MinHeight="500" MinWidth="600">
    <Grid Background="{DynamicResource MahApps.Brushes.ThemeBackground}">
        <mah:MetroAnimatedSingleRowTabControl Margin="0,0,0,0" Name="tabControl" ItemsSource="{Binding}" SelectionChanged="tabControl_SelectionChanged"/>
    </Grid>

</mah:MetroWindow>
